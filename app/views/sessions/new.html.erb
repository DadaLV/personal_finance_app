<div id="page-content" class="container col-6">
  <h2>Log in</h2>  
  <%= form_with scope: :session, url: login_path do |form| %>
  
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= form.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Cancel and return to home page', root_path, class: "d-flex justify-content-center mt-3 text-info" %>
</div>