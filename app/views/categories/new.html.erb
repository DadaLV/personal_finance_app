<div class="container col-6">
  <h2>New Category</h2>  
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with(model: @category, local: true) do |form| %>
        <% if @category.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
            <ul>
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group mb-3 row">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'col-2 form-control', placeholder:"Name of category" %>
        </div>
        <div class="form-group mb-3 row">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'col-2 form-control', placeholder:"Description of category" %>
        </div>
        <div class="actions mb-3">
          <%= form.submit class: 'btn btn-info' %>
        </div>
      <% end %>      
    </div>    
  </div>
  <%= link_to 'Cancel and return to categories listing', categories_path, class: "d-flex justify-content-center mt-3 text-info" %>
</div>    