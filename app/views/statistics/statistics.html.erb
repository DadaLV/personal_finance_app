<h1>Statistics</h1>

<%= form_tag(statistics_operations_path, method: :get) do %>
  <div class="form-group">
    <%= label_tag(:start_date, "Start date:") %>
    <%= date_field_tag(:start_date, @start_date) %>
  </div>

  <div class="form-group">
    <%= label_tag(:end_date, "End date:") %>
    <%= date_field_tag(:end_date, @end_date) %>
  </div>

  <div class="form-group">
    <%= label_tag(:category_id, "Category:") %>
    <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name)) %>
  </div>

  <%= submit_tag("Get statistics", class: "btn btn-primary") %>
<% end %>

<div class="row">
  <div class="col-md-6">
    <h2>Total amount:</h2>
    <p><%= number_to_currency(@total_amount) %></p>
  </div>

  <div class="col-md-6">
    <h2>Operations by year:</h2>
    <%= column_chart @grouped_by_year, height: "400px" %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Operations by month:</h2>
    <%= column_chart @grouped_by_month, height: "400px" %>
  </div>

  <div class="col-md-6">
    <h2>Operations by day:</h2>
    <%= column_chart @grouped_by_day, height: "400px" %>
  </div>
</div>
