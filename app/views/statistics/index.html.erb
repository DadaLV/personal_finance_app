<div id="page-content" class="container col-6">
  <h1>Statistics</h1>

  <div>
    <canvas id="myChart" width="600" height="400"></canvas>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      const ctx = document.getElementById('myChart');

      const data = {
        labels: <%= raw @dates %>,
        datasets: [{
          label: 'Amount',
          data: <%= @amount %>,
          fill: false,
          borderColor: 'rgb(75, 192, 192)',
          tension: 0.1
        }]
      };

      const config = {
        type: 'line',
        data: data,
        options: {
          responsive: false
        }
      };

      const myChart = new Chart(ctx, config);
    </script>
  </div>
</div>