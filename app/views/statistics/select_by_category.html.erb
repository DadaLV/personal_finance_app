<div id="page-content" class="container col-8">
  <% if !logged_in? %>
      
    <h2>To see your statistics please sign up or log in</h2>
    <img src="<%= asset_path('statistics_by_category.png') %>" alt="Statistics by category">

    <%= link_to "Sign up", "/signup", class: "btn btn-primary mb-3" %>
    <%= link_to "Log in", "/login", class: "btn btn-primary mb-3" %>
      
  <% else %>
    <h2>Select by category</h2>
    <form action="<%= url_for(action: :select_by_category) %>" method="get">
      <div>
        <div class="col-md-6">
          <label class="form-label"> Select start date: </label>
          <input class="form-control" type="date" name="start_date">
        </div>
        <div class="col-md-6">
          <label class="form-label"> Select end date: </label>
          <input class="form-control" type="date" name="end_date">
        </div>
      </div>
      <div class="mt-3">
        <div class="col-md-6">
          <button type="submit" class="btn btn-primary">Show</button>
        </div>  
      </div>
    </form>
  <div class="statistics">
    <div>
      <canvas id="myChart" width="400" height="400"></canvas>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
        const ctx = document.getElementById('myChart');

        const data = {
          labels: <%=raw @operations_name %>,
          datasets: [{
            label: 'Amount',
            data: <%=raw @operations_amount %>,
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
          }]
        };

        const config = {
          type: 'doughnut',
          data: data,
          options: {
            responsive: false
          }
        };

        const myChart = new Chart(ctx, config);
      </script>
    </div>
    <div>
      <% if @operations.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Category</th>
              <th>Description</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @operations.each do |operation| %>
              <tr>
                <td><%= operation.odate.strftime("%B %d, %Y") %></td>
                <td><%= operation.category.name %></td>
                <td><%= operation.description %></td>
                <td><%= number_to_currency(operation.amount) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No operations found.</p>
      <% end %>
    </div>
  </div>
  <%= link_to 'Return to operations listing', operations_path, class: "d-flex justify-content-center mt-3 text-info" %>
  <% end %>
</div>
