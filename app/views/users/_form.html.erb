<%= form_with model: @user do |form| %>
  <%= render "shared/error_messages", obj: @user %> 
  

  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", placeholder: "Enter a username" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= form.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Cancel and return to home page', root_path, class: "d-flex justify-content-center mt-3 text-info" %>