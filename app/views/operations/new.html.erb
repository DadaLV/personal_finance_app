<div id="page-content" class="container col-6">
  <h2>New Operation</h2>  
  <%= form_with model: @operation do |form| %>
  <%= render "shared/error_messages", obj: @operation %>
  

  <div class="form-group">
    <%= form.label Date %>
    <%= form.datetime_local_field :odate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, class: "form-control" %>
  </div>
  
  <div>
    <%= link_to "Create new Category", new_category_path, class: "mt-2 mb-2 btn btn-info"%>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "form-control", step: "0.01" %>
  </div>

  <%# <div class="form-group">
    <%= form.label :notes %>
    <%# <%= form.text_area :notes, class: "form-control" %> 
  <%# </div> %> 

  <div class="actions">
    <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
  <%= link_to 'Cancel and return to operations listing', operations_path, class: "d-flex justify-content-center mt-3 text-info" %>
</div>