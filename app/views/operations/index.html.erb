<%= stylesheet_link_tag 'category_show' %>
<div class="container col-6">
  <h1>Operations</h1>

  <%= link_to "Create New Operation", new_operation_path, class: "btn btn-info mb-3" %> 

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @operations.each do |operation| %>
        <tr>
          <td><%= operation.description %></td>
          <td><%= operation.amount %></td>
          <td><%= operation.odate.strftime("%B %d, %Y %I:%M %p") %></td>
          <td><%= operation.category.name %></td>
          <td>
            <div class="d-flex justify-content gap-3">
              <%= link_to "Show", operation_path(operation), class: "btn btn-info mr-2" %>
              <%= link_to "Edit", edit_operation_path(operation), class: "btn btn-warning mr-2" %>
              <%= button_to "Delete", operation_path(operation), method: :delete, onclick: "return confirm('Are you sure?')", class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table> 
  <%= link_to "Show statistics by month", "/statistics/select_by_category", class: "btn btn-primary mb-3" %>
      <%= link_to "Show statistics by category", "/statistics/stati", class: "btn btn-primary mb-3" %>
  <%# <%= render "graph" %> 
</div>